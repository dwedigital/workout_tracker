
<div class="flex">
  <div class="rounded-lg shadow-md p-8">
    <h1 class="text-2xl font-bold mb-6 text-center">Edit Workout</h1>

    <%= form_with(model: @workout, local: true, class: "space-y-6") do |form| %>
      <% if @workout.errors.any? %>
        <div id="error_explanation" class="bg-red-50 text-red-500 p-4 rounded-lg mb-6">
          <h2 class="text-lg font-semibold"><%= pluralize(@workout.errors.count, "error") %> prohibited this workout from being saved:</h2>

          <ul class="list-disc list-inside">
            <% @workout.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-2">
        <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>


      <div class="space-y-2">
        <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :description, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>



      <div class="space-y-2">
        <%= form.label :date, class: "block text-sm font-medium text-gray-700" %>
        <%= form.date_field :date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>

      <div class="space-y-2">
        <%= form.label :duration, class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :duration, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>

      <div class="flex items-center justify-between">
        <%= form.submit class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
        <div class="space-x-2">
          <%= link_to 'Show', @workout, class: "text-blue-500 hover:underline" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

